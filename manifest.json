{
  "manifest_version": 3,
  "name": "Video Justifier",
  "version": "1.0",
  "description": "Justify videos to the left or right in theatre/fullscreen mode.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "icons": {
    "48": "icon.svg",
    "96": "icon.svg"
  },
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "action": {
    "default_icon": "icon.svg",
    "default_popup": "popup.html",
    "default_title": "Justify Video"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "commands": {
    "justify-left": {
      "suggested_key": {
        "default": "Ctrl+Alt+Left"
      },
      "description": "Justify video to the left"
    },
    "justify-centre": {
      "suggested_key": {
        "default": "Ctrl+Alt+Down"
      },
      "description": "Justify video to the centre"
    },
    "justify-right": {
      "suggested_key": {
        "default": "Ctrl+Alt+Right"
      },
      "description": "Justify video to the right"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/watch*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
